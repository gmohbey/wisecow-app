apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: wisecow-unique-ingress
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "true"  # Redirect HTTP to HTTPS
spec:
  tls:
  - hosts:
    - wisecow-app.latest  # Replace with your actual domain
    secretName: wisecow-tls  # Name of the secret containing the TLS certificate
  rules:
  - host: wisecow-app.latest  # Replace with your actual domain
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: wisecow-unique-service  # Replace with your actual service name
            port:
              number: 4499  # Replace with the port your service is
